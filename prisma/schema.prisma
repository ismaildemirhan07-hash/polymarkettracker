generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  walletAddress String?  @unique
  email         String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  bets          Bet[]
  tier          String   @default("free")
  
  @@index([walletAddress])
}

model Bet {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  market        String
  type          String
  position      String
  
  amount        Float
  shares        Int
  entryOdds     Float
  
  asset         String
  threshold     Float
  thresholdUnit String
  
  resolveDate   DateTime
  resolved      Boolean  @default(false)
  outcome       String?
  
  category      String
  dataSource    String
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([type])
  @@index([resolved])
  @@index([asset])
}

model PriceHistory {
  id        String   @id @default(uuid())
  symbol    String
  type      String
  price     Float
  metadata  Json?
  timestamp DateTime @default(now())
  
  @@index([symbol, timestamp])
  @@index([type])
}

model ApiUsage {
  id          String   @id @default(uuid())
  service     String
  endpoint    String
  callsToday  Int      @default(0)
  lastReset   DateTime @default(now())
  
  @@unique([service, endpoint])
}
