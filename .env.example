# Application
NODE_ENV=development
PORT=5000

# Database (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/polymarket_tracker

# Redis (Optional - has in-memory fallback)
REDIS_URL=redis://localhost:6379

# API Keys (Optional - free tiers available)
FINNHUB_API_KEY=
OPENWEATHER_API_KEY=

# Rate Limits (requests per day)
COINGECKO_DAILY_LIMIT=10000
OPENMETEO_DAILY_LIMIT=10000
FINNHUB_DAILY_LIMIT=60

# Cache TTL (seconds)
CRYPTO_CACHE_TTL=60
WEATHER_CACHE_TTL=300
STOCK_CACHE_TTL=60

# Features
ENABLE_WEBSOCKET=true
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
